<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Banca.Maui.Pages.FormularioDeAhorroPage"
             Title="FormularioDeAhorro">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="EntryNombre" Placeholder="Nombre"/>
        <Picker x:Name="Picker" ItemDisplayBinding="{Binding Nombre}"/>
        <Entry x:Name="EntryNota" Placeholder="Nota"/>
        <Entry x:Name="EntryInteres" Placeholder="Intereses"/>        
        <Button Text="Guardar" Clicked="ButtonGuardar_Clicked"/>
        <Button Text="Cancelar" Clicked="ButtonCancelar_Clicked"/>        
    </VerticalStackLayout>
</ContentPage>